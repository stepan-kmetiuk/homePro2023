            .hero__content-bottom
              .hero__advantages
                .hero__item
                  .hero__block-icon
                    img(src="../img/hero/icons/vector-hero1.svg", alt="icon-check")
                  .hero__block-text.
                    Satisfaction Guarantee
                .hero__item
                  .hero__block-icon
                    img(src="../img/hero/icons/vector-hero2.svg", alt="icon-clock")
                  .hero__block-text.
                    24H Availability
